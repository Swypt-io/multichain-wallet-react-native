{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-native", // Add this line if your project includes JSX
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true, // Consider adding this if you're using Metro to bundle your code and only need type-checking from tsc
    "lib": ["es2016", "dom"] ,// Include "dom" for types like 'Promise', though it's not strictly accurate for RN environments
    // Added "baseUrl" and "paths" to potentially simplify module imports (adjust as needed)
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}

