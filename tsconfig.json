{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-native", // Add this line if your project includes JSX
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true, // Consider adding this if you're using Metro to bundle your code and only need type-checking from tsc
    "lib": ["es2016", "dom"] // Include "dom" for types like 'Promise', though it's not strictly accurate for RN environments
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
